CPPFLAGS += -I$(top_srcdir)/ir/common -I$(top_srcdir)/ir/ident -I$(top_srcdir)/ir/adt \
	    -I$(top_srcdir)/ir/debug  -I$(top_srcdir)/ir/ir    -I$(top_srcdir)/ir/tv  \
